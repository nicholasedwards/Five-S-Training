<% provide(:title, 'Login') %>

<div class="row">
  <div class="col-md-offset-3 col-lg-offset-3 col-md-6 col-lg-6">
    <%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Log in!", class: "btn btn-primary" %>

  <% end %>

  <%= link_to "Sign up now!", signup_path %>
  </div>
</div>