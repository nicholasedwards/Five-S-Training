<div class="row">
  <div class="col-md-offset-2 col-lg-offset-2 col-md-8 col-lg-8">
    <%= @lesson.content.html_safe %>
  </div>
  <div class="col-md-offset-4 col-lg-offset-4 col-md-4 col-lg-4">
	  <%= form_for(current_user.lesson_completions.build) do |f| %>
